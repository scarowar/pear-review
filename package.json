{
  "name": "pear-review",
  "displayName": "Pear Review - AI Code Review",
  "description": "Your friendly neighborhood code reviewer providing immediate, empathetic feedback right in VS Code",
  "version": "0.1.1",
  "icon": "./media/pear-review-icon.png",
  "galleryBanner": {
    "color": "#ffffff",
    "theme": "light"
  },
  "publisher": "scarowar",
  "private": true,
  "license": "GPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "https://github.com/scarowar/pear-review.git"
  },
  "bugs": {
    "url": "https://github.com/scarowar/pear-review/issues"
  },
  "homepage": "https://github.com/scarowar/pear-review#readme",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Linters",
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "code review",
    "peer review",
    "copilot",
    "git",
    "feedback"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pear-review.reviewChanges",
        "title": "üçê Review",
        "category": "Pear Review",
        "enablement": "pearReview.isReady"
      },
      {
        "command": "pear-review.toggleAutoReview",
        "title": "üçê Toggle Auto Review",
        "category": "Pear Review"
      },
      {
        "command": "pear-review.toggleReviewComments",
        "title": "üçê Toggle Review Annotations",
        "category": "Pear Review"
      }
    ],
    "configuration": {
      "title": "üçê Pear Review",
      "properties": {
        "pearReview.autoReview": {
          "type": "boolean",
          "default": false,
          "description": "Automatically review changes on save",
          "order": 1
        }
      }
    },
    "menus": {
      "editor/title": [
        {
          "command": "pear-review.reviewChanges",
          "group": "navigation",
          "when": "resourceScheme == file && pearReview.isReady",
          "icon": "$(notebook-render-output)"
        }
      ],
      "commandPalette": [
        {
          "command": "pear-review.reviewChanges",
          "when": "pearReview.isReady"
        },
        {
          "command": "pear-review.toggleAutoReview",
          "when": "pearReview.isReady"
        },
        {
          "command": "pear-review.toggleReviewComments",
          "when": "pearReview.isReady"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  },
  "dependencies": {
    "simple-git": "^3.22.0"
  }
}
